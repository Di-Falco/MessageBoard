<h3>All Topics:</h3>

<table class="table">
  @foreach (Topic topic in Model)
  {
      <tr>
      <th>@topic.Title</th>
      </tr>
      <tr>
      <td style="width:78%">&emsp;@topic.Description</td>
      <td style="width:22%" align="right"><a href='/Topics/Details/@(topic.TopicId)'><button class="btn btn-primary">View Messages</button></a></td>
      </tr>
  }
</table>